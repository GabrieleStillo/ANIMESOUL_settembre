<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/terms_conditions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_conditions_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Section 1: Acceptance of Terms -->
        <TextView
            android:id="@+id/acceptance_of_terms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acceptance_of_terms_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/acceptance_of_terms_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acceptance_of_terms_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Section 2: Registration and Security -->
        <TextView
            android:id="@+id/registration_security_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_security_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/registration_security_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_security_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Section 3: Acceptable Use -->
        <TextView
            android:id="@+id/acceptable_use_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acceptable_use_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/acceptable_use_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acceptable_use_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Continue with the other sections similarly -->

        <!-- Section 4: Intellectual Property -->
        <TextView
            android:id="@+id/intellectual_property_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intellectual_property_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/intellectual_property_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intellectual_property_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Other sections go here in the same structure -->
    </LinearLayout>

</ScrollView>
